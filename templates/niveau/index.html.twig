{% extends 'base.html.twig' %}

{% block title %}Niveau Index{% endblock %}

{% block body %}
    <h1>Client Levels</h1>

    <div class="table-container">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 20px;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
            font-size: 2.5em;
            text-transform: uppercase;
            letter-spacing: 2px;
            animation: fadeIn 1s ease-in;
        }

        /* Table Container */
        .table-container {
            max-width: 1200px;
            margin: 0 auto;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            overflow-x: auto;
        }

        /* Table Styling */
        .niveau-table {
            width: 100%;
            border-collapse: collapse;
            animation: slideUp 0.8s ease-out;
        }

        .niveau-table thead {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            text-transform: uppercase;
            font-size: 0.9em;
            letter-spacing: 1px;
        }

        .niveau-table th,
        .niveau-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .niveau-table th {
            font-weight: 600;
        }

        .niveau-table tbody tr {
            transition: all 0.3s ease;
        }

        .niveau-table tbody tr:hover {
            background: #f0f4ff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        /* Level Badge */
        .level-badge {
            display: inline-block;
            padding: 5px 10px;
            background: #e74c3c;
            color: #fff;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: bold;
            text-align: center;
            min-width: 40px;
            animation: pulse 2s infinite;
        }

        /* XP Progress Bar */
        .xp-progress {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .xp-bar {
            height: 10px;
            background: linear-gradient(to right, #2ecc71, #27ae60);
            border-radius: 5px;
            transition: width 0.5s ease-in-out;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .xp-progress span {
            font-size: 0.9em;
            color: #34495e;
        }

        /* Action Icons */
        .actions {
            display: flex;
            gap: 10px;
            justify-content: flex-start;
        }

        .action-icon {
            font-size: 1.2em;
            color: #3498db;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .action-icon:hover {
            color: #2980b9;
            transform: scale(1.2);
        }

        .delete-icon {
            color: #e74c3c;
            background: none;
            border: none;
            cursor: pointer;
        }

        .delete-icon:hover {
            color: #c0392b;
            transform: scale(1.2);
        }

        /* No Records */
        .no-records {
            text-align: center;
            color: #7f8c8d;
            font-style: italic;
            padding: 20px;
        }

        /* Create Button */
        .create-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin: 20px auto;
            padding: 12px 25px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            text-decoration: none;
            border-radius: 50px;
            font-size: 1.1em;
            font-weight: 500;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            text-align: center;
            max-width: 200px;
        }

        .create-btn:hover {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .niveau-table th,
            .niveau-table td {
                padding: 10px;
                font-size: 0.9em;
            }

            .action-icon {
                font-size: 1em;
            }

            .create-btn {
                padding: 10px 20px;
                font-size: 1em;
            }

            .level-badge {
                font-size: 0.8em;
                padding: 4px 8px;
            }
        }

        @media (max-width: 480px) {
            .niveau-table th,
            .niveau-table td {
                padding: 8px;
                font-size: 0.8em;
            }

            .xp-progress {
                flex-direction: column;
                align-items: flex-start;
            }

            .actions {
                flex-direction: column;
                gap: 5px;
            }
        }
    </style>
        <table class="niveau-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Max XP</th>
                    <th>Level</th>
                    <th>Current XP</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for niveau in niveaux %}
                    <tr class="niveau-row">
                        <td>{{ niveau.id }}</td>
                        <td>{{ niveau.MaxNiveauXP }}</td>
                        <td class="level-badge">{{ niveau.niveau }}</td>
                        <td>
                            <div class="xp-progress">
                                <div class="xp-bar" style="width: {{ (niveau.niveauXP / niveau.MaxNiveauXP * 100) | number_format(2) }}%"></div>
                                <span>{{ niveau.niveauXP }} / {{ niveau.MaxNiveauXP }}</span>
                            </div>
                        </td>
                        <td class="actions">
                            <a href="{{ path('app_niveau_show', {'id': niveau.id}) }}" class="action-icon" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_niveau_edit', {'id': niveau.id}) }}" class="action-icon" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_niveau_delete', {'id': niveau.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this level?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ niveau.id) }}">
                                <button type="submit" class="action-icon delete-icon" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="no-records">No levels found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_niveau_new') }}" class="create-btn">
        <i class="fas fa-plus"></i> Add New Level
    </a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
{% endblock %}