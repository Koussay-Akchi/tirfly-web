{% extends 'base.html.twig' %}

{% block title %}Modifier Feedback{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h2 class="h5 mb-0"><i class="fas fa-edit mr-2"></i>Modifier le Feedback</h2>
        </div>
        <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'response-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.note, 'Note (1 à 5)', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.note) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.contenu, 'Contenu du Feedback', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                    {{ form_errors(form.contenu) }}
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-primary mt-3">
                        <i class="fas fa-save mr-2"></i>Modifier
                    </button>
                    <a href="{{ path('liste_feedbacks') }}" class="btn btn-secondary mt-3">
                        <i class="fas fa-arrow-left mr-2"></i>Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    /* General Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fa;
    }

    .container {
        max-width: 600px;
    }

    /* Card Styling */
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border-bottom: none;
    }

    .card-header h2 {
        font-size: 1.5rem;
        font-weight: 500;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Alerts */
    .alert {
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    /* Form Styling */
    .response-form .form-group {
        margin-bottom: 1.5rem;
    }

    .response-form .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .response-form .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        font-size: 1rem;
    }

    .response-form .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }

    .response-form textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .response-form button.btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 5px;
    }

    /* Button Styling */
    .button-container {
        display: flex;
        gap: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #5a6268;
    }

    .btn-primary, .btn-secondary {
        color: white;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .card-header h2 {
            font-size: 1.2rem;
        }

        .response-form .form-control {
            font-size: 0.9rem;
        }

        .button-container {
            flex-direction: column;
        }
    }
</style>
{% endblock %}