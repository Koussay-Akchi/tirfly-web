{% extends 'base-staff.html.twig' %}

{% block title %}Gestion des Réclamations{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Bouton pour basculer le thème -->
    <button id="themeToggle" class="btn btn-theme-toggle">Activer le mode sombre</button>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h2 class="h5 mb-0"><i class="fas fa-tasks mr-2"></i>Réclamations</h2>
        </div>

        <div class="card-body">
            <!-- Section des statistiques -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4>Statistiques des réclamations par état</h4>
                    <canvas id="reclamationChart" height="200"></canvas>
                </div>
                <div class="col-md-6">
                    <h4>Statistiques des réclamations par réponse</h4>
                    <canvas id="responseChart" height="200"></canvas>
                </div>
            </div>
            <hr>

            <!-- Formulaire de recherche par état -->
            <div class="mb-4">
                <form method="get" action="{{ path('liste_reclamations') }}" class="form-inline">
                    <div class="form-group mr-2">
                        <label for="etat" class="mr-2">Rechercher par état :</label>
                        <select name="etat" id="etat" class="form-control">
                            <option value="">Tous les états</option>
                            {% for etat in etats %}
                                <option value="{{ etat }}" {{ etat_selectionne == etat ? 'selected' : '' }}>
                                    {{ etat }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </form>
            </div>

            <!-- Section du tableau -->
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 5%">ID</th>
                            <th style="width: 10%">Titre</th> <!-- Réduit de 15% à 10% -->
                            <th style="width: 19%">État</th>
                            <th style="width: 15%">Urgence</th>
                            <th style="width: 20%">Description</th> <!-- Réduit de 30% à 20% -->
                            <th style="width: 31%">Actions</th> <!-- Ajusté de 30% à 31% -->
                        </tr>
                    </thead>
                    <tbody>
                        {% for reclamation in reclamations %}
                            <tr>
                                <td class="font-weight-bold text-primary">#{{ reclamation.id }}</td>
                                <td class="text-truncate" style="max-width: 150px;"> <!-- Réduit de 200px à 150px -->
                                    {{ reclamation.titre|escape }}
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if reclamation.etat == 'Qualité de service' %}badge-warning
                                        {% elseif reclamation.etat == 'Retard' %}badge-danger
                                        {% elseif reclamation.etat == 'Annulation' %}badge-info
                                        {% elseif reclamation.etat == 'Répondu' %}badge-success
                                        {% else %}badge-secondary{% endif %}">
                                        {{ reclamation.etat }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if reclamation.urgence == 'Inacceptable' %}badge-danger
                                        {% elseif reclamation.urgence == 'Urgent' %}badge-warning
                                        {% else %}badge-success{% endif %}">
                                        {{ reclamation.urgence|default('Normal') }}
                                    </span>
                                </td>
                                <td class="text-truncate" style="max-width: 200px;"> <!-- Réduit de 300px à 200px -->
                                    {{ reclamation.description|escape }}
                                </td>
                                <td>
                                    <div class="d-flex action-buttons">
                                        <a href="{{ path('details_reclamation', {'id': reclamation.id}) }}" 
                                           class="btn btn-action btn-view" 
                                           data-tooltip="Voir les détails">
                                            <i class="fas fa-eye action-icon"></i>
                                        </a>
                                        {% set response = reclamation.reponses|first %}
                                        {% if response %}
                                            <a href="{{ path('app_reponse_edit', {'id': response.id}) }}" 
                                               class="btn btn-action btn-edit" 
                                               data-tooltip="Modifier la réponse">
                                                <i class="fas fa-edit action-icon"></i>
                                            </a>
                                        {% endif %}
                                        <a href="{{ path('delete_reclamation', {'id': reclamation.id}) }}" 
                                           class="btn btn-action btn-delete" 
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?')"
                                           data-tooltip="Supprimer">
                                            <i class="fas fa-trash-alt action-icon"></i>
                                        </a>
                                        {% if reclamation.reponses|length == 0 %}
                                            <a href="{{ path('repondre_reclamation', {'id': reclamation.id}) }}" 
                                               class="btn btn-action btn-reply" 
                                               data-tooltip="Répondre">
                                                <i class="fas fa-reply action-icon"></i>
                                            </a>
                                        {% else %}
                                            <button class="btn btn-action btn-disabled" 
                                                    disabled 
                                                    data-tooltip="Réponse déjà envoyée">
                                                <i class="fas fa-reply action-icon"></i>
                                            </button>
                                        {% endif %}
                                        <button type="button" 
                                                class="btn btn-action btn-email email-popup-btn" 
                                                data-reclamation-id="{{ reclamation.id }}"
                                                data-url="{{ path('envoyer_email_reclamation', {'id': reclamation.id}) }}"
                                                data-tooltip="Envoyer un email">
                                            <i class="fas fa-envelope action-icon"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 bg-light">
                                    <div class="text-muted">
                                        <i class="fas fa-inbox fa-2x mb-3"></i><br>
                                        Aucune réclamation trouvée
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pop-up personnalisé -->
        <div class="popup-overlay" id="popupOverlay" style="display: none;">
            <div class="popup" id="popup">
                <span class="close" id="closePopup">×</span>
                <div class="popup-content">
                    <h3>Envoyer un email pour la réclamation #<span id="reclamationId"></span></h3>
                    <form id="emailForm">
                        <input type="hidden" name="_token" value="{{ csrf_token('email_form') }}">
                        <div class="form-group">
                            <label for="messageInput">Message</label>
                            <textarea class="form-control" id="messageInput" name="message" rows="4" placeholder="Votre message..." required></textarea>
                        </div>
                        <button type="submit" id="submitEmail" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Total : {{ reclamations.getTotalItemCount }} réclamations
                </small>
                {{ knp_pagination_render(reclamations) }}
            </div>
        </div>
    </div>
</div>

<!-- Inclure Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Inclure jQuery pour AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du pop-up
    const popupOverlay = document.getElementById('popupOverlay');
    const closePopup = document.getElementById('closePopup');
    const emailForm = document.getElementById('emailForm');
    const reclamationIdSpan = document.getElementById('reclamationId');
    const messageInput = document.getElementById('messageInput');
    const submitButton = document.getElementById('submitEmail');

    document.querySelectorAll('.email-popup-btn').forEach(button => {
        button.addEventListener('click', function() {
            const reclamationId = this.getAttribute('data-reclamation-id');
            const url = this.getAttribute('data-url');
            reclamationIdSpan.textContent = reclamationId;
            emailForm.setAttribute('data-url', url);
            popupOverlay.style.display = 'flex';
            popupOverlay.classList.add('active');
            messageInput.value = '';
        });
    });

    closePopup.addEventListener('click', function() {
        popupOverlay.style.display = 'none';
        popupOverlay.classList.remove('active');
    });

    popupOverlay.addEventListener('click', function(e) {
        if (e.target === popupOverlay) {
            popupOverlay.style.display = 'none';
            popupOverlay.classList.remove('active');
        }
    });

    emailForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const url = this.getAttribute('data-url');
        const message = messageInput.value.trim();
        const csrfToken = document.querySelector('input[name="_token"]').value;

        if (!message) {
            alert('Le message est requis.');
            return;
        }

        submitButton.disabled = true;
        submitButton.textContent = 'Envoi...';

        $.ajax({
            url: url,
            method: 'POST',
            data: { message: message, _token: csrfToken },
            success: function(response) {
                popupOverlay.style.display = 'none';
                popupOverlay.classList.remove('active');
                messageInput.value = '';
                alert('Email envoyé avec succès !');
            },
            error: function(xhr) {
                const errorMessage = xhr.responseJSON?.message || 'Erreur lors de l\'envoi de l\'email.';
                alert(errorMessage);
            },
            complete: function() {
                submitButton.disabled = false;
                submitButton.textContent = 'Envoyer';
            }
        });
    });

    // Graphique des états
    const ctx = document.getElementById('reclamationChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: {{ chart_labels|json_encode|raw }},
            datasets: [{
                data: {{ chart_data|json_encode|raw }},
                backgroundColor: ['#ff9f43', '#d63031', '#0984e3', '#00b894', '#636e72'],
                borderWidth: 1,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom' },
                title: { display: true, text: 'Répartition des réclamations par état' }
            }
        }
    });

    // Graphique des réponses
    const responseCtx = document.getElementById('responseChart').getContext('2d');
    new Chart(responseCtx, {
        type: 'doughnut',
        data: {
            labels: {{ response_chart_labels|json_encode|raw }},
            datasets: [{
                data: {{ response_chart_data|json_encode|raw }},
                backgroundColor: ['#00b894', '#ff7675'],
                borderWidth: 1,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom' },
                title: { display: true, text: 'Répartition des réclamations par statut de réponse' }
            }
        }
    });

    // Gestion du thème
    const themeToggle = document.getElementById('themeToggle');
    themeToggle.addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        this.textContent = document.body.classList.contains('dark-mode') 
            ? 'Activer le mode clair' 
            : 'Activer le mode sombre';
    });
});
</script>

