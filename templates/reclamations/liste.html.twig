<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du pop-up
    const popupOverlay = document.getElementById('popupOverlay');
    const closePopup = document.getElementById('closePopup');
    const emailForm = document.getElementById('emailForm');
    const reclamationIdSpan = document.getElementById('reclamationId');
    const messageInput = document.getElementById('messageInput');
    const submitButton = document.getElementById('submitEmail');

    // Ouvrir le pop-up lorsqu'on clique sur le bouton email
    document.querySelectorAll('.email-popup-btn').forEach(button => {
        button.addEventListener('click', function() {
            const reclamationId = this.getAttribute('data-reclamation-id');
            const url = this.getAttribute('data-url');
            reclamationIdSpan.textContent = reclamationId;
            emailForm.setAttribute('data-url', url);
            popupOverlay.style.display = 'flex';
            popupOverlay.classList.add('active');
            messageInput.value = ''; // Réinitialiser le champ
        });
    });

    // Fermer le pop-up
    closePopup.addEventListener('click', function() {
        popupOverlay.style.display = 'none';
        popupOverlay.classList.remove('active');
    });

    // Fermer le pop-up en cliquant à l'extérieur
    popupOverlay.addEventListener('click', function(e) {
        if (e.target === popupOverlay) {
            popupOverlay.style.display = 'none';
            popupOverlay.classList.remove('active');
        }
    });

    // Soumission du formulaire via AJAX
    emailForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const url = this.getAttribute('data-url');
        const message = messageInput.value.trim();
        const csrfToken = document.querySelector('input[name="_token"]').value;

        if (!message) {
            alert('Le message est requis.');
            return;
        }

        submitButton.disabled = true;
        submitButton.textContent = 'Envoi...';

        $.ajax({
            url: url,
            method: 'POST',
            data: {
                message: message,
                _token: csrfToken
            },
            success: function(response) {
                popupOverlay.style.display = 'none';
                popupOverlay.classList.remove('active');
                messageInput.value = '';
                alert('Email envoyé avec succès !');
            },
            error: function(xhr) {
                const errorMessage = xhr.responseJSON && xhr.responseJSON.message 
                    ? xhr.responseJSON.message 
                    : 'Erreur lors de l\'envoi de l\'email.';
                alert(errorMessage);
            },
            complete: function() {
                submitButton.disabled = false;
                submitButton.textContent = 'Envoyer';
            }
        });
    });

    // Initialisation du graphique des états
    const ctx = document.getElementById('reclamationChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: {{ chart_labels|json_encode|raw }},
            datasets: [{
                data: {{ chart_data|json_encode|raw }},
                backgroundColor: [
                    '#ff9f43', // Qualité de service
                    '#d63031', // Retard
                    '#0984e3', // Annulation
                    '#00b894', // Répondu
                    '#636e72'  // Autres
                ],
                borderWidth: 1,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: {
                            size: 12,
                            family: 'Poppins',
                            weight: 500
                        },
                        padding: 15
                    }
                },
                title: {
                    display: true,
                    text: 'Répartition des réclamations par état',
                    font: {
                        size: 14,
                        family: 'Poppins',
                        weight: 600
                    },
                    padding: 15
                }
            }
        }
    });

    // Initialisation du graphique des réponses
    const responseCtx = document.getElementById('responseChart').getContext('2d');
    new Chart(responseCtx, {
        type: 'doughnut',
        data: {
            labels: {{ response_chart_labels|json_encode|raw }},
            datasets: [{
                data: {{ response_chart_data|json_encode|raw }},
                backgroundColor: [
                    '#00b894', // Répondu
                    '#ff7675'  // Non répondu
                ],
                borderWidth: 1,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: {
                            size: 12,
                            family: 'Poppins',
                            weight: 500
                        },
                        padding: 15
                    }
                },
                title: {
                    display: true,
                    text: 'Répartition des réclamations par statut de réponse',
                    font: {
                        size: 14,
                        family: 'Poppins',
                        weight: 600
                    },
                    padding: 15
                }
            }
        }
    });

    // Gestion du basculement de thème
    const themeToggle = document.getElementById('themeToggle');
    themeToggle.addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        this.textContent = document.body.classList.contains('dark-mode') 
            ? 'Activer le mode clair' 
            : 'Activer le mode sombre';
    });
});
</script>
{% endblock %}