{% extends 'base.html.twig' %}

{% block title %}Détails du Feedback{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
            <h2 class="h5 mb-0"><i class="fas fa-info-circle mr-2"></i> Détails du Feedback #{{ feedback.id }}</h2>
        </div>
        <div class="card-body">
            <p><strong>Contenu :</strong> {{ feedback.contenu }}</p>
            <p><strong>Date :</strong> {{ feedback.dateFeedback ? feedback.dateFeedback|date('d/m/Y H:i') : 'Non précisée' }}</p>
            <p><strong>Note :</strong> {{ feedback.note }}/5</p>
            <p><strong>Client :</strong> {{ feedback.client.nom ?? 'Anonyme' }}</p>
            <p><strong>Voyage :</strong> {{ feedback.voyage.destination ?? 'Non spécifié' }}</p>
        </div>
        <div class="card-footer bg-white">
            {% if app.user and feedback.client == app.user %}
                <a href="{{ path('edit_feedback', {'id': feedback.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</a>
            {% endif %}
            <a href="{{ path('liste_feedbacks') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}