{# templates/feedbacks/liste.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des Feedbacks{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5"><i class="fas fa-comments"></i> Feedbacks</h2>
            <link rel="stylesheet" href="{{ asset('styles/listef.css') }}">
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Client</th>
                        <th>Note</th>
                        <th>Contenu</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for feedback in feedbacks %}
                        <tr>
                            <td>{{ feedback.client.getNom() }}</td>
                            <td>{{ feedback.note }}</td>
                            <td>{{ feedback.contenu|escape }}</td>
                            <td>{{ feedback.dateFeedback|date('Y-m-d') }}</td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4" class="text-center">Aucun feedback trouv√©.</td></tr>
                    {% endfor %}
                </tbody>
            </table>

            {# Pagination block #}
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(feedbacks) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
