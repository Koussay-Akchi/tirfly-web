{% extends 'base.html.twig' %}

{% block title %}Gestion des Feedbacks{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5"><i class="fas fa-comments"></i> Feedbacks</h2>
            		  <link rel="stylesheet" href="{{ asset('styles/listef.css') }}">
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th>Note</th>
                        <th>Contenu</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for feedback in feedbacks %}
                        <tr>
                            <td>#{{ feedback.id }}</td>
                         <td>{{ feedback.client.getNom() }}</td>

                            <td>{{ feedback.note }}</td>
                            <td>{{ feedback.contenu|escape }}</td>
                            <td>{{ feedback.dateFeedback|date('Y-m-d') }}</td>
                            <td class="d-flex">
                                <a href="{{ path('edit_feedback', {'id': feedback.id}) }}" class="btn btn-warning btn-sm text-white">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <form action="{{ path('delete_feedback', {'id': feedback.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce Feedback ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feedback.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center">Aucun feedback trouvé.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
