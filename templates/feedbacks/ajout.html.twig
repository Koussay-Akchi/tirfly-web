{% extends 'base.html.twig' %}

{% block title %} Ajouter un Feedback {% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h2 class="h5 mb-0"><i class="fas fa-comment-alt mr-2"></i> Ajouter un Feedback</h2>
                  <link rel="stylesheet" href="{{ asset('styles/ajoutf.css') }}">
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.note, {'attr': {'class': 'form-control', 'min': 1, 'max': 5}}) }}
                </div>
                <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Envoyer</button>
            {{ form_end(form) }}
            
         
        </div>
    </div>
</div>
{% for error in form.dateFeedback.vars.errors %}
    <div class="alert alert-danger">
        {{ error.message }}
    </div>
{% endfor %}

{% endblock %}
