    {% if type == 'hotel' %}
        <!-- Hotel specific fields -->
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.prix, {
                    'label': 'Prix par nuit (€)',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
        </div>
    {% elseif type == 'logement' %}
        <!-- Logement specific fields -->
        <div class="row g-3">
            <div class="col-md-6">
                {{ form_row(form.prix, {
                    'label': 'Prix par mois (€)',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.jourDispo, {
                    'label': 'Disponible à partir du',
                    'attr': {'class': 'form-control datepicker'}
                }) }}
            </div>
        </div>
    {% elseif type == 'foyer' %}
        <!-- Foyer specific fields -->
        <div class="row g-3">
            <div class="col-md-4">
                {{ form_row(form.frais, {
                    'label': 'Frais d\'inscription (€)',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.typeFoyer, {
                    'label': 'Type de foyer',
                    'attr': {'class': 'form-select'}
                }) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.documents, {
                    'label': 'Documents (PDF)',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
        </div>
    {% endif %}

    <!-- Services display section -->
    <div class="row mt-4">
        <div class="col-12">
            <h4>Services associés</h4>
            {% if hebergement.services|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Prix</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for service in hebergement.services %}
                                <tr>
                                    <td>{{ service.nom }}</td>
                                    <td>{{ service.description }}</td>
                                    <td>{{ service.prix }} €</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    Aucun service n'est actuellement associé à cet hébergement.
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Enhanced Services Display -->
<div class="row mt-4">
    <div class="col-12">
        <h4 class="section-title">
            <i class="fas fa-concierge-bell me-2"></i>Services associés
        </h4>
        
        {% if hebergement.services|length > 0 %}
            <div class="row">
                {% for service in hebergement.services %}
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                                        <i class="fas 
                                            {% if 'wifi' in service.nom|lower %}fa-wifi
                                            {% elseif 'piscine' in service.nom|lower %}fa-swimming-pool
                                            {% elseif 'restaurant' in service.nom|lower %}fa-utensils
                                            {% elseif 'parking' in service.nom|lower %}fa-parking
                                            {% else %}fa-check{% endif %} 
                                            text-primary">
                                        </i>
                                    </div>
                                    <h5 class="mb-0">{{ service.nom }}</h5>
                                </div>
                                <p class="text-muted small">{{ service.description }}</p>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                        {{ service.prix }} €
                                    </span>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                Aucun service n'est actuellement associé à cet hébergement.
            </div>
        {% endif %}
        
        <!-- Add Service Button -->
        <div class="mt-3">
            <button class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Ajouter un service
            </button>
        </div>
    </div>
</div>