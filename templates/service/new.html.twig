{% extends 'base-staff.html.twig' %}

{% block title %}Ajouter un service{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un nouveau service</h1>
    
    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.hebergement) }}
        
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer
            </button>
            <a href="{{ path('app_service_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
