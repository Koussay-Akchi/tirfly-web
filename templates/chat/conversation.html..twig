{% extends 'base.html.twig' %}

{% block body %}
<h2>Conversation avec {{ other.nom }}</h2>

<div class="chat-box" style="max-height: 400px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
    {% for msg in messages %}
        <div style="text-align: {{ msg.senderType == app.user.type ? 'right' : 'left' }};">
            <strong>{{ msg.senderType|capitalize }}:</strong> {{ msg.message }}<br>
            <small>{{ msg.createdAt|date('d/m/Y H:i') }}</small>
        </div>
        <hr>
    {% endfor %}
</div>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary mt-2">Envoyer</button>
{{ form_end(form) }}
{% endblock %}
