                        <option value="CAD">CAD $</option>
                        <option value="JPY">JPY Â¥</option>
                    </select>
                </div>
                
                <p class="category">CatÃ©gorie: {{ produit.categorie ?? 'Non spÃ©cifiÃ©e' }}</p>
                
                {% if produit.ecoFriendly %}
                    <p class="eco-friendly">ðŸŒ± Produit Ã©co-responsable</p>
