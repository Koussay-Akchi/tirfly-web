        .go-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
            background: #2c3e50;
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

        .go-top:hover {
            background: #1a252f;
            transform: translateY(-3px);
        }

        @media (max-width: 768px) {
            .produit-details {
