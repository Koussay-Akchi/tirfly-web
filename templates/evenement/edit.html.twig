{% extends 'base-staff.html.twig' %}

{% block title %}Modifier un Événement{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 600px; border-radius: 1rem;">
            <h2 class="text-center mb-4">{{ evenement is defined ? 'Modifier' : 'Ajouter' }} un Événement</h2>

            {# Image actuelle s’il y en a une #}
            {% if evenement.image %}
                <div class="text-center mb-4">
                    <p class="mb-2">Image actuelle :</p>
                    <img src="{{ asset('uploads/evenements/' ~ evenement.image) }}" alt="Image de l'événement"
                         class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                </div>
            {% endif %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-group mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.dateDebut) }}
                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDebut) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.dateFin) }}
                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateFin) }}
            </div>

            {# Gestion de la relation avec Destination #}
            <div class="form-group mb-3">
                {{ form_label(form.destination) }}
                {{ form_widget(form.destination, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.destination) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.image) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </div>

            {{ form_end(form) }}

            <div class="text-center mt-3">
                <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
