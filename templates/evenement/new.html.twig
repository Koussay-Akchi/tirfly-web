{% extends 'base-staff.html.twig' %}

{% block title %}Nouvel Événement{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 600px; border-radius: 1rem;">
            <h2 class="text-center mb-4">Créer un Nouvel Événement</h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-group mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'événement'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.prix) }}
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                </div>
                {{ form_errors(form.prix) }}
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.dateDebut) }}
                        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateDebut) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.dateFin) }}
                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateFin) }}
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.destination) }}
                {{ form_widget(form.destination, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.destination) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.image) }}
                <small class="form-text text-muted">Formats acceptés: JPG, PNG, WEBP (max 2MB)</small>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-save me-1"></i> Créer
                </button>
                <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .card { 
            border: none;
        }
    </style>
{% endblock %}