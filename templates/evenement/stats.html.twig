{% extends 'base-staff.html.twig' %}

{% block title %}Statistiques des √âv√©nements par Destination{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .chart-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #343a40;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>üìä Statistiques des √âv√©nements par Destination</h1>

    <div class="chart-container">
        <canvas id="eventsByDestinationChart"></canvas>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('eventsByDestinationChart').getContext('2d');
            const stats = {{ stats|json_encode|raw }};

            const labels = stats.map(item => item.destination);
            const data = stats.map(item => item.count);

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Nombre d\'√©v√©nements',
                        data: data,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'R√©partition des √âv√©nements par Destination'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Nombre d\'√©v√©nements'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Destination'
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
{% endblock %}